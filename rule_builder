    <script>
        const API_BASE = {
            MESSAGES: "https://api.cubixworld.net/forum.topic.messages",
            EDIT: "https://api.cubix.world/forum.editMessage"
        };

        async function fetchProxy(url, options = {}) {
            return fetch(`/proxy?url=${encodeURIComponent(url)}`, options);
        }

        let currentData = { sections: [] };
        let generatedMessages = [];
        const el = {
            login: document.getElementById('login'),
            topicId: document.getElementById('topic-id'),
            token: document.getElementById('access-token'),
            fileInput: document.getElementById('json-input'),
            btnSend: document.getElementById('btn-send'),
            previewContainer: document.getElementById('preview-container'),
            previewContent: document.getElementById('preview-content'),
            progressContainer: document.getElementById('progress-container'),
            log: document.getElementById('log')
        };

        const savedKeys = ['login', 'topicId', 'token'];
        savedKeys.forEach(key => {
            const saved = localStorage.getItem(`cubix_v2_${key}`);
            if (saved) el[key].value = saved;
            el[key].addEventListener('input', () => {
                localStorage.setItem(`cubix_v2_${key}`, el[key].value);
                validate();
            });
        });

        el.fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    currentData = JSON.parse(event.target.result);
                    localStorage.setItem('cubix_v2_json_data', JSON.stringify(currentData));
                    globalFullUpdate();
                    validate();
                    addLog(`–§–∞–π–ª –∑–∞–≥—Ä—É–∂–µ–Ω: ${file.name}`);
                } catch (err) { alert('–û—à–∏–±–∫–∞ JSON: ' + err.message); }
            };
            reader.readAsText(file);
        });

        function validate() { el.btnSend.disabled = !(currentData && el.login.value && el.token.value && el.topicId.value); }
        function stripHTML(html) {
            if (!html) return "";
            let text = html;
            // –ü—Ä–µ–≤—Ä–∞—â–∞–µ–º –ø–µ—Ä–µ–Ω–æ—Å—ã —Å—Ç—Ä–æ–∫ –∏ –ø–∞—Ä–∞–≥—Ä–∞—Ñ—ã –≤ –æ–±—ã—á–Ω—ã–π —Ç–µ–∫—Å—Ç
            text = text.replace(/<br\s*\/?>/gi, "\n");
            text = text.replace(/<\/p>/gi, "\n");
            text = text.replace(/<p[^>]*>/gi, "");
            text = text.replace(/<div[^>]*>/gi, "");
            text = text.replace(/<\/div>/gi, "\n");

            // –£–¥–∞–ª—è–µ–º –≤—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ —Ç–µ–≥–∏
            const tmp = document.createElement("DIV");
            tmp.innerHTML = text;
            let final = tmp.textContent || tmp.innerText || text;

            // –ß–∏—Å—Ç–∏–º –æ—Ç –ª–∏—à–Ω–∏—Ö –ø—Ä–æ–±–µ–ª–æ–≤ –≤ –Ω–∞—á–∞–ª–µ/–∫–æ–Ω—Ü–µ –∫–∞–∂–¥–æ–π —Å—Ç—Ä–æ–∫–∏
            return final.split('\n').map(line => line.trim()).filter(line => line).join('\n');
        }

        function addLog(msg) {
            el.log.innerHTML += `[${new Date().toLocaleTimeString()}] ${msg}\n`;
            el.log.scrollTop = el.log.scrollHeight;
        }

        function genRuleHtml(rule) {
            const cleanNote = rule.note ? rule.note.trim().replace(/\n\s*\n/g, '\n').replace(/\n/g, '<br>') : '';
            const cleanPunishment = rule.punishment ? rule.punishment.trim().replace(/\n\s*\n/g, '\n').replace(/\n/g, '<br>') : '';

            return `<div style="position: relative; margin-bottom: 30px; font-family: 'Outfit', 'Segoe UI', Arial, sans-serif;"><div style="background: #ffffff; border-radius: 20px; border: 4px solid #2d5091; box-shadow: 0 15px 35px rgba(45, 80, 145, 0.07); overflow: hidden; position: relative;"><div style="display: flex; justify-content: center; padding-top: 20px; margin-bottom: 12px;"><div style="min-width: 65px; height: 35px; background: #1e293b; border-radius: 10px; display: flex; align-items: center; justify-content: center; box-shadow: 0 5px 15px rgba(0,0,0,0.2); border-bottom: 4px solid #4a90e2;"><span style="color: #ffffff; font-size: 17px; font-weight: 800; letter-spacing: 0.5px;">${rule.rule_number}</span></div></div><div style="padding: 0 30px 15px 30px; text-align: left;"><div style="font-size: 17px; color: #0f172a; line-height: 1.5; font-weight: 700;">${rule.message.trim()}</div></div>${(rule.note || rule.punishment) ? `<div style="padding: 0 25px 20px 25px; display: flex; flex-direction: column; gap: 12px;">${rule.note ? `<div style="background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 12px; padding: 10px 14px; position: relative; margin-top: 10px; text-align: left;"><div style="position: absolute; left: 12px; top: -10px; background: #2d5091; color: #ffffff; padding: 2px 8px; border-radius: 5px; font-size: 10px; font-weight: 900; text-transform: uppercase;">–ü—Ä–∏–º–µ—á–∞–Ω–∏–µ</div><div style="font-size: 14px; color: #334155; line-height: 1.4; width: 100%; display: block;">${cleanNote}</div></div>` : ''}${rule.punishment ? `<div style="background: #fffafa; border: 1px solid #fee2e2; border-radius: 12px; padding: 10px 14px; position: relative; margin-top: 10px; text-align: left;"><div style="position: absolute; left: 12px; top: -10px; background: #b91c1c; color: #ffffff; padding: 2px 8px; border-radius: 5px; font-size: 10px; font-weight: 900; text-transform: uppercase;">–ù–∞–∫–∞–∑–∞–Ω–∏–µ</div><div style="font-size: 14px; color: #450a0a; line-height: 1.4; font-weight: 700; width: 100%; display: block;">${cleanPunishment}</div></div>` : ''}</div>` : ''}</div></div>`.replace(/>\s+</g, '><');
        }

        window.addEventListener('load', () => {
            const savedData = localStorage.getItem('cubix_v2_json_data');
            if (savedData) {
                try {
                    currentData = JSON.parse(savedData);
                    globalFullUpdate();
                    validate();
                } catch (e) {
                    localStorage.removeItem('cubix_v2_json_data');
                }
            }
        });

        function performCorePreviewRender() {
            el.previewContainer.style.display = 'block';
            el.previewContent.innerHTML = '';
            generatedMessages = [];

            if (!currentData || !currentData.sections) return;

            currentData.sections.forEach(sec => {
                let html = `<div style="font-family: 'Outfit', sans-serif; background: #ffffff; border: 8px solid #2d5091; border-radius: 32px; padding: 45px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08); margin-bottom: 50px; position: relative; overflow: hidden;"><div style="margin-bottom: 35px; display: flex; align-items: center; gap: 20px;"><div style="font-size: 34px; font-weight: 900; color: #1e293b; letter-spacing: -1px; line-height: 1;">${sec.section_name}</div></div>`;

                if (sec.start_note) {
                    html += `<div style="margin-bottom: 40px; background: #f1f5f9; padding: 25px 30px; border-radius: 20px; color: #475569; font-size: 17px; font-style: italic; line-height: 1.8; border-right: 8px solid #cbd5e1;">${sec.start_note.trim().replace(/\n/g, '<br>')}</div>`;
                }

                sec.rules.forEach(r => html += genRuleHtml(r));

                if (sec.end_note) {
                    html += `<div style="margin: 20px 0; text-align: center; color: #64748b; font-size: 13px; font-style: italic;">‚Äî ${sec.end_note.trim().replace(/\n/g, '<br>')} ‚Äî</div>`;
                }

                if (sec.end_html) {
                    html += `<div style="margin-top: 30px;">${sec.end_html}</div>`;
                }

                html = (html + `</div>`).replace(/>\s+</g, '><');
                generatedMessages.push(html);

                const d = document.createElement('div');
                d.innerHTML = html;
                d.style.marginBottom = "30px";
                el.previewContent.appendChild(d);
            });
        }

        // –ì–ª–æ–±–∞–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –¢–û–õ–¨–ö–û –ø—Ä–µ–≤—å—é (–∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –ø—Ä–∏ –≤–≤–æ–¥–µ —Ç–µ–∫—Å—Ç–∞)
        function refreshPreviewOnly() {
            performCorePreviewRender();
            const header = generateSectionsHeader();
            if (header) {
                const headerDiv = document.createElement('div');
                headerDiv.innerHTML = header;
                el.previewContent.prepend(headerDiv);
            }
        }

        // –ì–ï–ù–ï–†–ê–¶–ò–Ø –°–ü–ò–°–ö–ê –†–ê–ó–î–ï–õ–û–í –î–õ–Ø –ü–ï–†–í–û–ì–û –°–û–û–ë–©–ï–ù–ò–Ø (–í–ò–ó–£–ê–õ–¨–ù–û)
        function generateSectionsHeader() {
            if (!currentData || !currentData.sections) return "";

            let html = `
            <div style="font-family: 'Outfit', sans-serif; background: #ffffff; border: 8px solid #2d5091; border-radius: 32px; padding: 35px; margin-bottom: 40px; box-shadow: 0 15px 35px rgba(0,0,0,0.05); text-align: center;">
                <div style="color: #2d5091; font-size: 24px; font-weight: 950; text-transform: uppercase; letter-spacing: 4px; margin-bottom: 25px; width: 100%;">–†–∞–∑–¥–µ–ª—ã</div>
                <div style="display: flex; flex-direction: column; align-items: flex-start; gap: 10px; text-align: left;">`;

            currentData.sections.forEach((sec, i) => {
                const cleanName = sec.section_name.trim().replace(/:$/, "");
                html += `
                <div style="background: #f8fafc; border: 2px solid #e2e8f0; border-radius: 12px; padding: 10px 18px; color: #1e293b; font-size: 14px; font-weight: 800; text-transform: uppercase; letter-spacing: 0.5px;">
                    ${cleanName}
                </div>`;
            });

            html += `
                </div>
            </div>`;
            return html.replace(/>\s+</g, '><');
        }

        el.btnSend.onclick = async () => {
            el.btnSend.disabled = true;
            el.progressContainer.style.display = 'block';
            el.log.innerHTML = "";
            addLog("–ó–∞–ø—É—Å–∫ –ø—É–±–ª–∏–∫–∞—Ü–∏–∏ –ø—Ä–∞–≤–∏–ª...");
            try {
                const resp = await fetchProxy(`${API_BASE.MESSAGES}?topic_id=${el.topicId.value}`);
                const data = await resp.json();
                if (data.type === 'error') throw new Error(data.error);
                const myMsgs = [];
                for (let k in data.messages) { if (data.messages[k].creator_login === el.login.value) myMsgs.push(data.messages[k].id); }
                addLog(`–ù–∞–π–¥–µ–Ω–æ —Å–æ–æ–±—â–µ–Ω–∏–π –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è: ${myMsgs.length}`);
                if (myMsgs.length < generatedMessages.length) throw new Error(`–ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –≤–∞—à–∏—Ö —Å–æ–æ–±—â–µ–Ω–∏–π! –ù—É–∂–Ω–æ ${generatedMessages.length}, –µ—Å—Ç—å ${myMsgs.length}.`);

                // –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —à–∞–ø–∫—É —Å–æ —Å–ø–∏—Å–∫–æ–º —Ä–∞–∑–¥–µ–ª–æ–≤ –¥–ª—è –ø–µ—Ä–≤–æ–≥–æ —Å–æ–æ–±—â–µ–Ω–∏—è
                const sectionsHeader = generateSectionsHeader();

                for (let i = 0; i < generatedMessages.length; i++) {
                    addLog(`–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è ${i + 1}/${generatedMessages.length} (ID: ${myMsgs[i]})...`);

                    // –î–æ–±–∞–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Ä–∞–∑–¥–µ–ª–æ–≤ —Ç–æ–ª—å–∫–æ –≤ –ü–ï–†–í–û–ï —Å–æ–æ–±—â–µ–Ω–∏–µ
                    const contentToSend = (i === 0) ? (sectionsHeader + generatedMessages[i]) : generatedMessages[i];

                    const editResp = await fetchProxy(API_BASE.EDIT, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            access_token: el.token.value,
                            login: el.login.value,
                            message_id: myMsgs[i],
                            content: contentToSend
                        })
                    });
                    const resJson = await editResp.json();
                    if (resJson.type === 'error') throw new Error(resJson.error);
                }
                addLog("‚ú® –í–°–ï –ü–†–ê–í–ò–õ–ê –ò –°–ü–ò–°–û–ö –†–ê–ó–î–ï–õ–û–í –£–°–ü–ï–®–ù–û –û–ë–ù–û–í–õ–ï–ù–´!");
                alert("–£—Å–ø–µ—à–Ω–æ –æ–ø—É–±–ª–∏–∫–æ–≤–∞–Ω–æ!");
            } catch (err) { addLog(`‚ùå –û–®–ò–ë–ö–ê: ${err.message}`); }
            finally { el.btnSend.disabled = false; }
        };

        // --- –õ–û–ì–ò–ö–ê –†–ï–î–ê–ö–¢–û–†–ê ---

        function switchTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(`tab-${tabId}`).classList.add('active');
            event.target.classList.add('active');
        }

        function addSection() {
            if (!currentData) currentData = { sections: [] };
            currentData.sections.push({
                section_name: "–ù–æ–≤—ã–π —Ä–∞–∑–¥–µ–ª",
                start_note: "",
                end_note: "",
                end_html: "",
                rules: []
            });
            renderEditor();
            saveEditorState();
        }

        function removeSection(index) {
            if (confirm("–£–¥–∞–ª–∏—Ç—å –≤–µ—Å—å —Ä–∞–∑–¥–µ–ª —Å–æ –≤—Å–µ–º–∏ –ø—Ä–∞–≤–∏–ª–∞–º–∏?")) {
                currentData.sections.splice(index, 1);
                renderEditor();
                saveEditorState();
            }
        }

        function addRule(sectionIndex) {
            currentData.sections[sectionIndex].rules.push({
                rule_number: "0.0",
                message: "–¢–µ–∫—Å—Ç –ø—Ä–∞–≤–∏–ª–∞",
                note: "",
                punishment: ""
            });
            renderEditor();
            saveEditorState();
        }

        function removeRule(sectionIndex, ruleIndex) {
            currentData.sections[sectionIndex].rules.splice(ruleIndex, 1);
            renderEditor();
            saveEditorState();
        }

        function updateField(sectionIndex, ruleIndex, field, value, el) {
            if (ruleIndex === null) {
                currentData.sections[sectionIndex][field] = value;
            } else {
                currentData.sections[sectionIndex].rules[ruleIndex][field] = value;
            }

            if (el && el.tagName === 'TEXTAREA') {
                el.style.height = 'auto';
                el.style.height = el.scrollHeight + 'px';
            }

            saveEditorState();

            // –í–∞–∂–Ω–æ: –ú—ã –ù–ï –≤—ã–∑—ã–≤–∞–µ–º renderEditor() –∑–¥–µ—Å—å, —á—Ç–æ–±—ã –Ω–µ —Ç–µ—Ä—è—Ç—å —Ñ–æ–∫—É—Å –∏ –Ω–µ –ø—Ä—ã–≥–∞—Ç—å –ø–æ —Å—Ç—Ä–∞–Ω–∏—Ü–µ.
            refreshPreviewOnly();
        }

        function el_originalRenderPreview() {
            refreshPreviewOnly();
        }

        function updateEndHtml(sIdx, value, el) {
            currentData.sections[sIdx].end_html = value;
            if (el && el.tagName === 'TEXTAREA') {
                el.style.height = 'auto';
                el.style.height = el.scrollHeight + 'px';
            }
            saveEditorState();
            el_originalRenderPreview();
        }

        function moveRule(sIdx, rIdx, dir) {
            const rules = currentData.sections[sIdx].rules;
            const newIdx = rIdx + dir;
            if (newIdx < 0 || newIdx >= rules.length) return;
            [rules[rIdx], rules[newIdx]] = [rules[newIdx], rules[rIdx]];
            renderEditor();
            renderPreview();
            saveEditorState();
        }

        function saveEditorState() {
            localStorage.setItem('cubix_v2_json_data', JSON.stringify(currentData));
        }

        function renderEditor() {
            const workspace = document.getElementById('sections-list');
            workspace.innerHTML = "";
            if (!currentData || !currentData.sections) return;

            currentData.sections.forEach((sec, sIdx) => {
                const secEl = document.createElement('div');
                secEl.className = 'editor-section-card';
                secEl.innerHTML = `
                    <div style="display:flex; align-items: center; gap:15px; margin-bottom:15px; padding-bottom:15px; border-bottom: 2px solid #f1f5f9;">
                        <div style="flex:1">
                            <span class="editor-label">–ó–∞–≥–æ–ª–æ–≤–æ–∫ —Ä–∞–∑–¥–µ–ª–∞</span>
                            <input class="editor-input" style="font-weight:800; font-size:1.1rem; color: var(--primary); background: #f8fafc;" value="${sec.section_name}" oninput="updateField(${sIdx}, null, 'section_name', this.value)">
                        </div>
                        <button onclick="removeSection(${sIdx})" class="delete-btn" style="height: 45px; width: 45px; margin-top: 18px;" title="–£–¥–∞–ª–∏—Ç—å —Ä–∞–∑–¥–µ–ª">üóëÔ∏è</button>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <span class="editor-label">–ò–Ω—Å—Ç—Ä—É–∫—Ü–∏—è / –ù–∞—á–∞–ª–æ —Ä–∞–∑–¥–µ–ª–∞ (start_note)</span>
                        <textarea class="editor-input" style="min-height: 60px; font-size: 0.85rem;" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateField(${sIdx}, null, 'start_note', this.value, this)">${stripHTML(sec.start_note || '')}</textarea>
                    </div>

                    <div id="rules-${sIdx}"></div>
                    <button onclick="addRule(${sIdx})" class="btn btn-secondary" style="width: 100%; margin-top:15px; font-size:0.9rem; border-style: dashed; background: #fff;">+ –î–æ–±–∞–≤–∏—Ç—å –ø—Ä–∞–≤–∏–ª–æ</button>

                    <div style="margin-top: 25px; display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                        <div>
                            <span class="editor-label">–ü–æ–¥–ø–∏—Å—å –≤ –∫–æ–Ω—Ü–µ —Ä–∞–∑–¥–µ–ª–∞ (end_note)</span>
                            <textarea class="editor-input" style="min-height: 60px; font-size: 0.85rem;" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateField(${sIdx}, null, 'end_note', this.value, this)">${stripHTML(sec.end_note || '')}</textarea>
                        </div>
                        <div>
                            <span class="editor-label">–°–ø–µ—Ü. HTML –≤ –∫–æ–Ω—Ü–µ (end_html)</span>
                            <textarea class="editor-input" style="min-height: 60px; font-size: 0.85rem; font-family: monospace;" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateEndHtml(${sIdx}, this.value, this)">${stripHTML(sec.end_html || '')}</textarea>
                        </div>
                    </div>
                `;

                const rulesContainer = secEl.querySelector(`#rules-${sIdx}`);
                sec.rules.forEach((rule, rIdx) => {
                    const ruleEl = document.createElement('div');
                    ruleEl.className = 'editor-rule-card';

                    // –°–∞–º–∏ –¥–∞–Ω–Ω—ã–µ —á–∏—Å—Ç–∏–º —Ç–æ–ª—å–∫–æ –ø—Ä–∏ –ø–µ—Ä–≤–æ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–∏ –∏–ª–∏ –∑–∞–≥—Ä—É–∑–∫–µ
                    const displayMsg = stripHTML(rule.message);
                    const displayNote = stripHTML(rule.note);
                    const displayPunishment = stripHTML(rule.punishment);

                    ruleEl.innerHTML = `
                        <div class="editor-rule-controls">
                            <span class="editor-label">‚Ññ</span>
                            <input class="editor-input" style="font-weight:800; text-align:center; padding: 10px 5px;" value="${rule.rule_number}" oninput="updateField(${sIdx}, ${rIdx}, 'rule_number', this.value)">
                            <div style="display:flex; gap:4px; margin-top:10px;">
                                <button class="control-btn" onclick="moveRule(${sIdx}, ${rIdx}, -1)" title="–í–≤–µ—Ä—Ö">‚ñ≤</button>
                                <button class="control-btn" onclick="moveRule(${sIdx}, ${rIdx}, 1)" title="–í–Ω–∏–∑">‚ñº</button>
                            </div>
                        </div>
                        <div class="editor-rule-fields">
                            <div>
                                <span class="editor-label">–û—Å–Ω–æ–≤–Ω–æ–π —Ç–µ–∫—Å—Ç</span>
                                <textarea class="editor-input" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateField(${sIdx}, ${rIdx}, 'message', this.value, this)">${displayMsg}</textarea>
                            </div>
                            <div style="display:grid; grid-template-columns: 1fr 1fr; gap:15px;">
                                <div>
                                    <span class="editor-label">–ü—Ä–∏–º–µ—á–∞–Ω–∏–µ</span>
                                    <textarea class="editor-input" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateField(${sIdx}, ${rIdx}, 'note', this.value, this)">${displayNote}</textarea>
                                </div>
                                <div>
                                    <span class="editor-label">–ù–∞–∫–∞–∑–∞–Ω–∏–µ</span>
                                    <textarea class="editor-input" style="font-weight:600; color:#b91c1c;" onfocus="this.style.height = this.scrollHeight + 'px'" oninput="updateField(${sIdx}, ${rIdx}, 'punishment', this.value, this)">${displayPunishment}</textarea>
                                </div>
                            </div>
                        </div>
                        <button onclick="removeRule(${sIdx}, ${rIdx})" class="delete-btn" style="height: 35px; width: 35px; margin-top: 18px;" title="–£–¥–∞–ª–∏—Ç—å –ø—Ä–∞–≤–∏–ª–æ">‚úï</button>
                    `;
                    rulesContainer.appendChild(ruleEl);
                });
                workspace.appendChild(secEl);
            });
        }

        document.getElementById('editor-load-json').onchange = (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (event) => {
                try {
                    currentData = JSON.parse(event.target.result);
                    localStorage.setItem('cubix_v2_json_data', JSON.stringify(currentData));
                    globalFullUpdate();
                    validate();
                    alert("JSON —É—Å–ø–µ—à–Ω–æ –∑–∞–≥—Ä—É–∂–µ–Ω –≤ —Ä–µ–¥–∞–∫—Ç–æ—Ä!");
                } catch (err) { alert('–û—à–∏–±–∫–∞ JSON: ' + err.message); }
            };
            reader.readAsText(file);
        };

        function downloadJson() {
            if (!currentData) return alert("–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è!");
            const blob = new Blob([JSON.stringify(currentData, null, 4)], { type: "application/json" });
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = "cubix_rules.json";
            a.click();
            URL.revokeObjectURL(url);
        }

        // –ì–ª–∞–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –≤—Å–µ–≥–æ —Å—Ä–∞–∑—É
        function globalFullUpdate() {
            performCorePreviewRender();
            refreshPreviewOnly();
            renderEditor();
        }

        window.addEventListener('load', () => {
            const savedData = localStorage.getItem('cubix_v2_json_data');
            if (savedData) {
                try {
                    currentData = JSON.parse(savedData);
                    globalFullUpdate();
                    validate();
                } catch (e) {
                    localStorage.removeItem('cubix_v2_json_data');
                }
            }
        });
    </script>
</body>

</html>
